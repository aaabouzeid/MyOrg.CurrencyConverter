{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=currencyconverter;Username=postgres;Password=postgres"
  },
  "SeedDefaultAdmin": false,
  "DefaultAdmin": {
    "Email": "admin@admin.com",
    "Password": "P@ssw0rd1234"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/currency-converter-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}",
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithEnvironmentName" ],
    "Properties": {
      "Application": "CurrencyConverter.API"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "Enabled": true,
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3000",
      "http://localhost:3001",
      "https://localhost:3001"
    ]
  },
  "JwtSettings": {
    "SecretKey": "ThisIsAVerySecretKeyForJwtTokenGeneration!MustBeAtLeast32Characters",
    "Issuer": "CurrencyConverter.API",
    "Audience": "CurrencyConverter.Clients",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7,
    "ValidateLifetime": true,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ClockSkewMinutes": 5
  },
  "CurrencyProviderSettings": {
    "ActiveProvider": "Frankfurter",
    "Frankfurter": {
      "BaseUrl": "https://api.frankfurter.app"
    }
  },
  "CurrencyRestrictions": {
    "RestrictedCurrencies": [ "TRY", "PLN", "THB", "MXN" ]
  },
  "ResiliencePolicies": {
    "RetryPolicy": {
      "RetryCount": 3
    },
    "CircuitBreakerPolicy": {
      "HandledEventsAllowedBeforeBreaking": 5,
      "DurationOfBreakInSeconds": 30
    }
  },
  "Cache": {
    "Enabled": true,
    "ConnectionString": "localhost:6379",
    "DefaultTtlMinutes": 60,
    "Ttl": {
      "LatestRatesMinutes": 30,
      "ExchangeRateMinutes": 30
    },
    "ThrowOnFailure": false
  },
  "RateLimiting": {
    "Enabled": true,
    "PermitLimit": 100,
    "WindowSeconds": 60
  },
  "OpenTelemetry": {
    "Enabled": true,
    "ServiceName": "CurrencyConverter.API",
    "ServiceVersion": "1.0.0",
    "ConsoleExporter": {
      "Enabled": true
    },
    "OtlpExporter": {
      "Enabled": false,
      "Endpoint": "http://localhost:4317"
    }
  }
}
