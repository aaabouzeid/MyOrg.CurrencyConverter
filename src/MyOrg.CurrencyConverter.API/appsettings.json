{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "CurrencyProvider": {
    "FrankfurterApiBaseUrl": "https://api.frankfurter.app"
  },
  "CurrencyRestrictions": {
    "RestrictedCurrencies": [ "TRY", "PLN", "THB", "MXN" ]
  },
  "ResiliencePolicies": {
    "RetryPolicy": {
      "RetryCount": 3
    },
    "CircuitBreakerPolicy": {
      "HandledEventsAllowedBeforeBreaking": 5,
      "DurationOfBreakInSeconds": 30
    }
  }
}
