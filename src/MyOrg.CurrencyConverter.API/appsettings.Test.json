{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=currencyconverter_test;Username=postgres;Password=postgres"
  },
  "SeedDefaultAdmin": true,
  "Cors": {
    "Enabled": true,
    "AllowedOrigins": [
      "http://localhost:3001",
      "https://localhost:3001",
      "http://localhost:3000",
      "https://localhost:3000"
    ]
  },
  "DefaultAdmin": {
    "Email": "testadmin@test.com",
    "Password": "Test@1234"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Warning",
        "System": "Information",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/currency-converter-test-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 3,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}",
          "fileSizeLimitBytes": 5242880,
          "rollOnFileSizeLimit": true
        }
      }
    ]
  },
  "JwtSettings": {
    "SecretKey": "TestEnvironmentSecretKeyForJwtTokenGeneration!MustBeAtLeast32Characters",
    "Issuer": "CurrencyConverter.API.Test",
    "Audience": "CurrencyConverter.Clients.Test",
    "ExpirationMinutes": 30,
    "RefreshTokenExpirationDays": 1,
    "ValidateLifetime": true,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ClockSkewMinutes": 5
  },
  "ResiliencePolicies": {
    "RetryPolicy": {
      "RetryCount": 2
    },
    "CircuitBreakerPolicy": {
      "HandledEventsAllowedBeforeBreaking": 3,
      "DurationOfBreakInSeconds": 15
    }
  },
  "Cache": {
    "Enabled": true,
    "ConnectionString": "localhost:6379",
    "DefaultTtlMinutes": 10,
    "Ttl": {
      "LatestRatesMinutes": 10,
      "ExchangeRateMinutes": 10
    },
    "ThrowOnFailure": false
  },
  "RateLimiting": {
    "Enabled": true,
    "PermitLimit": 500,
    "WindowSeconds": 60
  },
  "OpenTelemetry": {
    "Enabled": true,
    "ServiceName": "CurrencyConverter.API.Test",
    "ServiceVersion": "1.0.0-test",
    "ConsoleExporter": {
      "Enabled": true
    },
    "OtlpExporter": {
      "Enabled": false,
      "Endpoint": "http://localhost:4317"
    }
  }
}
